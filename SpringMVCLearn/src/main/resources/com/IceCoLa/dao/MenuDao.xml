<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dte/mybatis-3-mapper.dtd">

<mapper namespace="com.IceCoLa.dao">
    <resultMap id="myMap" type="menu">
        <id property="id" column="id"/>
        <collection property="children" select="com.IceCoLa.dao.MenuDao" column="id"/>
    </resultMap>
    <select id="selByPid" parameterType="int" resultType="myMap">
        select * from menu where pid = #{pid}
    </select>
</mapper>