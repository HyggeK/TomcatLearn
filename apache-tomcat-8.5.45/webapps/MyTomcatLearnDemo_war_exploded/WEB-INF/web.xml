            <param-name>config</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </servlet>
    <!--    配置访问方式 -->
    <servlet-mapping>
        <servlet-name>sg</servlet-name>
        <url-pattern>/sg</url-pattern>
    </servlet-mapping>

