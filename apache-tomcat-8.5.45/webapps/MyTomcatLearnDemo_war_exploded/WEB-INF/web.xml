<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">
<!--    配置全局数据-->
    <context-param>
        <param-name>name</param-name>
        <param-value>wuhan</param-value>
    </context-param>

    <servlet>
        <description>this is the description of aaa</description>
        <display-name>this is the display name of aaa</display-name>
        <servlet-name>sg</servlet-name>
        <servlet-class>com.IceCoLa.Learn.servlet.ServletConfigServlet</servlet-class>
