<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">
    <!--    配置Servlet -->
        <!--    配置Servlet类路径-->
    <servlet>
        <servlet-name>loginService</servlet-name>
        <servlet-class>com.IceCoLa.Learn.servlet.LoginServiceServlet</servlet-class>
    </servlet>
    <!--    配置访问方式 -->
    <servlet-mapping>
        <servlet-name>loginService</servlet-name>
        <url-pattern>/loginService</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.IceCoLa.Learn.servlet.LoginServlet</servlet-class>
    </servlet>
    <!--    配置访问方式 -->
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>my2</servlet-name>
        <servlet-class>com.IceCoLa.Learn.servlet.MyServlet2</servlet-class>
    </servlet>
    <!--    配置访问方式 -->
    <servlet-mapping>
        <servlet-name>my2</servlet-name>
        <url-pattern>/my2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>com.IceCoLa.Learn.servlet.MainServlet</servlet-class>
    </servlet>
    <!--    配置访问方式 -->
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ck</servlet-name>
        <servlet-class>com.IceCoLa.Learn.servlet.CookieServlet</servlet-class>
    </servlet>
    <!--    配置访问方式 -->
    <servlet-mapping>
        <servlet-name>ck</servlet-name>
        <url-pattern>/ck</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>gck</servlet-name>
        <servlet-class>com.IceCoLa.Learn.servlet.GetCookieServlet</servlet-class>
    </servlet>
    <!--    配置访问方式 -->
    <servlet-mapping>
        <servlet-name>gck</servlet-name>
        <url-pattern>/gck</url-pattern>
    </servlet-mapping>
</web-app>
