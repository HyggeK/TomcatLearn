<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dte/mybatis-3-mapper.dtd">
<mapper namespace="com.IceCoLa.dao.IUserDao">
    <!--配置查询所有-->
    <select id="findAll" resultType="com.IceCoLa.domain.User">
        select * from user
    </select>

    <insert id="saveUser" keyProperty="id" useGeneratedKeys="true">
        insert into user(username,birthday,sex,address)value(#{username},#{birthday},#{sex},#{address})
    </insert>

    <update id="updateUser">
        update user set username=#{username},birthday=#{birthday},sex=#{sex},address=#{address} where id=#{id}
    </update>

    <delete id="deleteUser">
        delete from user where id = #{id}
    </delete>

    <select id="findById" resultType="com.IceCoLa.domain.User">
        select * from user where id = #{id}
    </select>

    <select id="findByName" resultType="com.IceCoLa.domain.User">
        select * from user where username like #{username}
    </select>

    <select id="findTotal" resultType="java.lang.Integer">
        select count(id) from user
    </select>
</mapper>